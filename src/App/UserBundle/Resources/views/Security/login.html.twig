{% extends "LigneusUserBundle::layout.html.twig" %}

{% block content %}

    <style>
        body {
            background-image: url('{{ asset('img/bg0.jpg') }}');
            background-position: center;
            background-size: auto;
        }
    </style>

    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6 col-lg-offset-3 col-lg-6 lig-login-box">

        <div class="lig-login-logo-box">
            <img src="http://ottsnweb01.ligneus.local/lig_tree_w.png">
            <br>
            <span class="lig-login-app-name">{{ appname }}</span>
        </div>

        <hr>

        <form id="form-login" role="form" action="{{ path('ligneus_user_authenticate') }}" method="post">
            <div class="form-group">
                <input type="text"
                       class="form-control"
                       id="input-username"
                       name="username"
                       placeholder="Benutzername"
                       required="required"
                       autocomplete="false"
                        >
            </div>
            <div class="form-group">
                <input type="password"
                       class="form-control"
                       id="input-password"
                       name="password"
                       placeholder="Passwort"
                       required="required"
                       autocomplete="false"
                        >
            </div>
            <input type="hidden" name="referer" value="{{ referer }}">
            <button type="submit" class="btn btn-login btn-block">Login</button>
        </form>

        <hr>

        <div class="text-center lig-info-box">
            <span class="glyphicon glyphicon-lock lig-yellow"></span>
            <span class="lig-strong">Ligneus</span>
            WebSecurity
        </div>

    </div>

{% endblock %}
