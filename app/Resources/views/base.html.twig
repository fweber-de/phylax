<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Ligneus AppMonitor{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- CSS -->
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/global.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/sweet-alert.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/colpick.css') }}" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>

        <!-- APP CSS -->
        {% block stylesheets %}
        {% endblock %}

        <!-- JS -->
        <script src="{{ asset('assets/js/jquery-2.1.1.min.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/js/sweet-alert.min.js') }}"></script>
        <script src="{{ asset('assets/js/chart.min.js') }}"></script>
        <script src="{{ asset('assets/js/colpick.js') }}"></script>
        <script src="{{ asset('assets/js/randomColor.js') }}"></script>
        <script src="{{ asset('assets/js/moment.min.js') }}"></script>
        <script src="{{ asset('assets/js/jquery.sparkline.min.js') }}"></script>

        <!-- APP JS -->
        {% block javascripts %}
        {% endblock %}

    </head>

    <body>

        <div id="wrap">
            {% block body %}
            {% endblock %}
        </div>

        <div id="footer">
            <div class="container">
                <div class="centered copyright">
                    <p class="text-muted credit">
                        Tracker Endpoint:
                        <code>{{ url('tracker_create') }}</code>
                    </p>
                </div>
            </div>
        </div>

    </body>

</html>
