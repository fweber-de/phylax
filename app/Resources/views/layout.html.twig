{% extends 'base.html.twig' %}

{% block css %}
    <link href="{{ asset('assets/app.css') }}" rel="stylesheet">
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/app.js') }}"></script>
{% endblock %}

{% block body %}

    <span class="hidden" id="current-snl">{% block currentSNL %}{% endblock %}</span>

    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('index') }}">
                    <i class="fa fa-bell-o" aria-hidden="true"></i>
                    Phylax
                </a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Stream</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <img class="img-circle vnd-img-navbar" src="{{ 'http://www.gravatar.com/avatar/' ~ (app.user.email)|gravatarHash }}">
                            {{ app.user.username|lower }}
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}">
                                    <i class="fa fa-power-off"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid vnd-subnav">
        <div class="col-md-12 hidden-xs hidden-sm">

            <span class="pull-left">
                {% block subnav_left %}{% endblock %}
            </span>

            <span class="pull-right">
                <a class="btn btn-purple" href="#">New Source</a>
                <a class="btn btn-purple" href="#">New Team</a>
            </span>

        </div>
    </div>

    <div class="container-fluid">
        <div class="col-xs-12">

            {% block panes %}{% endblock %}

        </div>
    </div>

{% endblock %}
