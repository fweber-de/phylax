{% extends 'base.html.twig' %}

{% block css %}
    <link href="{{ asset('assets/app.css') }}" rel="stylesheet">
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/app.js') }}"></script>
{% endblock %}

{% block body %}

    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('index') }}">
                    <i class="fa fa-bell-o" aria-hidden="true"></i>
                    Phylax
                </a>
            </div>

            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Stream</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <img class="img-circle vnd-img-navbar" src="{{ 'http://www.gravatar.com/avatar/' ~ ('fweber@ligneus.de')|gravatarHash }}">
                            [USERNAME]
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">
                                    <i class="fa fa-power-off"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid vnd-subnav">
        <div class="col-md-12 hidden-xs hidden-sm">

            <span class="pull-left">
                <span class="vnd-t vnd-uppercase vnd-w-700">
                    Dashboard
                </span>

                <span class="vnd-t">
                    &middot;
                    Select a Project
                </span>

                <div class="btn-group">
                    <button type="button" class="btn btn-link btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu">
                    </ul>
                </div>
            </span>

            <span class="pull-right">
                <a class="btn btn-purple" href="#">New Project</a>
                <a class="btn btn-purple" href="#">New Team</a>
            </span>

        </div>
    </div>

    <div class="container-fluid">
        <div class="col-xs-12">

            {% block content %}{% endblock %}

        </div>
    </div>

{% endblock %}
